    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "..",
    "target": "es5",
    "typeRoots": ["../../node_modules/@types", "./main/types", "./test/types"]
  },
  "extends": "../tsconfig.json",
  "include": [
    "main/**/*.ts",
    "main/**/*.tsx",
    "main/**/*.[scss|gif|svg]",
    "../common"
  ]
}
