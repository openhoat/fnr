    "jsx": "react-jsx",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es5",
    "typeRoots": [
      "../../node_modules/@types",
      "./main/types",
      "./test/types"
    ]
